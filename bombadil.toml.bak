dotfiles_dir = "aerarium"

[settings]
terminal_width = 80
default_profile = "matt"

[[profiles]]
name = "matt"

[profiles.dots]
"bash/.bashrc" = ".bashrc"
"bash/aliases.bash" = ".config/bash/aliases.bash"
"bash/exports.bash" = ".config/bash/exports.bash"
"nvim/lua/custom" = ".config/nvim/lua/custom"

[profiles.hook]
post_install = [
    "mkdir -p ~/.config/bash",
    "if [ ! -d $HOME/.config/nvim ]; then git clone https://github.com/NvChad/starter $HOME/.config/nvim; fi",
    "source ~/.bashrc"
]
